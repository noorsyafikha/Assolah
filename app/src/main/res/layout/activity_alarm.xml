<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syafikha.assolah.alarm"
    android:background="@drawable/masjid3">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:text="@string/subuh"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <Button
        android:id="@+id/btnExit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:text="Back" />

    <Button
        android:id="@+id/btnPrayer"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/btnExit1"
        android:background="@color/colorPrimary"
        android:text="@string/prayer_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Zuhur"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:layout_below="@+id/btnPrayer"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:id="@+id/btnPrayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/btnPrayer"
        android:layout_alignStart="@+id/btnPrayer"
        android:background="@color/colorPrimary"
        android:text="Prayer Time" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asar"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:layout_below="@+id/btnPrayer1"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnPrayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/btnPrayer1"
        android:layout_alignLeft="@+id/btnPrayer1"
        android:layout_alignRight="@+id/btnPrayer1"
        android:layout_alignStart="@+id/btnPrayer1"
        android:background="@color/colorPrimary"
        android:text="prayer time" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/btnPrayer2"
        android:layout_marginTop="17dp"
        android:text="Maghrib"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <Button
        android:id="@+id/btnPrayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPrayer2"
        android:layout_alignRight="@+id/btnPrayer2"
        android:layout_alignTop="@+id/textView4"
        android:background="@color/colorPrimary"
        android:text="prayer time" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isyak"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:layout_below="@+id/btnPrayer3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/btnPrayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPrayer3"
        android:layout_alignStart="@+id/btnPrayer3"
        android:layout_alignTop="@+id/textView5"
        android:background="@color/colorPrimary"
        android:text="Prayer time" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Prayer Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_above="@+id/btnPrayer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />
</RelativeLayout>
