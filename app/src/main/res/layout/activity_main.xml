<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syafikha.assolah.MainActivity"
    android:background="@drawable/masjid3">

    <Button
        android:id="@+id/btnNearbyMosque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:background="@color/colorPrimary"
        android:text="Nearby Mosques"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnNearbyMosque"
        android:layout_alignEnd="@+id/btnNearbyMosque"
        android:layout_alignLeft="@+id/btnNearbyMosque"
        android:layout_alignRight="@+id/btnNearbyMosque"
        android:layout_alignStart="@+id/btnNearbyMosque"
        android:layout_marginBottom="75dp"
        android:background="@color/colorPrimary"
        android:text="Set Alarm" />

</RelativeLayout>
